<div class="event-form row-fluid">


<div class="span3">
  <h2>Edit Event </h3>
</div>

<div class="span4">
<%= form_for [@organization, @event] do |f| %>

  <div><%= f.label :name %>
  <%= f.text_field :name, :autofocus => true %></div>

  <div><%= f.label :description %>
  <%= f.text_area :description, :cols => 10, :rows => 10 %></div>
</div>

<div class="span5">
  <%= f.label :venue %>
  <%= f.text_field :venue %>

  <%= f.label :scheduled_on %>
  <%= f.text_field :scheduled_on %>

  <%= f.label :starts_at %>
  <%= f.text_field :starts_at %>

  <%= f.label :ends_at %>
  <%= f.text_field :ends_at %>

  <%= f.label :organizer %>
  <%= f.text_field :organizer %>

  <%= f.label :contact_email %>
  <%= f.text_field :contact_email %>

  <%= f.submit "Update Event", :class => "form-submit-btn" %>
<% end %>

</div>