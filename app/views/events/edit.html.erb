<%= form_for [@organization, @event] do |f| %>

  <div><%= f.label :name %><br />
  <%= f.text_field :name, :autofocus => true %></div>

  <div><%= f.label :description %><br />
  <%= f.text_area :description %></div>

  <div><%= f.label :scheduled_on %><br />
  <%= f.text_area :scheduled_on %></div>

  <div><%= f.label :venue %><br />
  <%= f.text_area :venue %></div>

  <div><%= f.label :starts_at %><br />
  <%= f.text_area :starts_at %></div>

  <div><%= f.label :ends_at %><br />
  <%= f.text_area :ends_at %></div>

  <div><%= f.submit "Update Event" %></div>
<% end %>

<%= link_to "Back", :back %>