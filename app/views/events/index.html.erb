<div class="row-fluid">

  <div class="span3">
    <h1>Upcoming Events</h1>
    <%= link_to('Add Event', new_event_path)%>
    <%= calendar_list @date do |date| %>
        <% if @events_by_date[date] %>
          <ul>
            <%= "#{date.month}-#{date.day}" %>
            <% @events_by_date[date].each do |event| %>
              <li><%= link_to event.name, event %></li>
            <% end %>
          </ul>
        <% end %>
        <% end %>
  </div>

  <div class="span9">
    <div id="events">
      <h2 id="month">
        <%= link_to "<", date: @date.prev_month %>
        <%= @date.strftime("%B %Y") %>
        <%= link_to ">", date: @date.next_month %>
      </h2>
      <%= calendar @date do |date| %>
        <%= date.day %>
        <% if @events_by_date[date] %>
          <ul>
            <% @events_by_date[date].each do |event| %>
              <li><%= link_to event.name, event %></li>
            <% end %>
          </ul>
        <% end %>
      <% end %>
    </div>
  </div>
</div>