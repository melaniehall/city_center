
<div class="signup row-fluid">
  <div class="span6 align-center">
    <h2>Welcome to <br/>City Center</h2>
    <p>We're glad you're joining the community.</p>
  </div>

  <div class="span6">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.label :name %><br />
      <%= f.text_field :name, :autofocus => true %><br/>
      </div>

      <p>
        <%= image_tag @user.avatar_url(:thumb) if @user.avatar? %> <br />
        <label>My Avatar</label><br />
        <%= f.file_field :avatar %><br />
        <%= f.hidden_field :avatar_cache %>
      </p>

      <div><%= f.label :email %><br />
      <%= f.text_field :email %></div>

      <div><%= f.label :password %><br />
      <%= f.password_field :password %></div>

      <div><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %></div>

      <div><%= f.submit "Sign up", id: "sign_up_link" %></div>
    <% end %>

    <div class="devise_links">
      <%= render "devise/shared/links" %>
    </div>
    </div>
  </div>