<div class="organization-form row-fluid">

  <div class="span3">
    <h2>New Organization</h2>
    <% @organization.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  </div>

  <div class="span4">
  <%= form_for @organization, :html => {:multipart => true} do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <p>
      <%= image_tag @organization.avatar_url(:thumb) if @organization.avatar? %>
      <label>Profile Picture</label>
      <%= f.file_field :avatar %>
      <%= f.hidden_field :avatar_cache %>
    </p>
      <%= f.label :bio %>
      <%= f.text_area :bio, :cols => 10, :rows => 10 %>
  </div>

  <div class="span5">

      <%= f.label :city %>
      <%= f.text_field :city %>

      <%= f.label :state %>
      <%= f.text_field :state %>

      <%= f.label :contact_email %>
      <%= f.text_field :contact_email %>

      <%= f.label :website %>
      <%= f.text_field :website %>

      <%= f.label :facebook %>
      <%= f.text_field :facebook %>

      <%= f.label :twitter_handle %>
      <%= f.text_field :twitter_handle%>

      <%= f.label :youtube %>
      <%= f.text_field :youtube %>

      <%= f.submit "Create Organization", :class => "form-submit-btn" %>
    <% end %>
  </div>
</div>