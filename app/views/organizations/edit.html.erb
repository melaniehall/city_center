<%= form_for(@organization) do |f| %>

  <div><%= f.label :name %><br />
  <%= f.text_field :name, :autofocus => true %></div>

  <p>
    <%= image_tag @organization.avatar_url(:thumb) if @organization.avatar? %>
    <label>My Avatar</label>
    <%= f.file_field :avatar %>
    <%= f.hidden_field :avatar_cache %>
  </p>

  <div><%= f.label :bio %><br />
  <%= f.text_area :bio %></div>

  <div><%= f.submit "Edit Profile" %></div>
<% end %>

<%= link_to "Back", :back %>
