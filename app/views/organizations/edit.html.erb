<%= form_for(:organization,:url => organization_path(@organization), :html => { :method => :put }) do |f| %>

  <div><%= f.label :name %><br />
  <%= f.text_field :name, :autofocus => true %></div>

  <div><%= f.label :bio %><br />
  <%= f.text_area :bio %></div>

  <div><%= f.label :city %><br />
  <%= f.text_field :city %></div>

  <div><%= f.label :state %><br />
  <%= f.text_field :state %></div>

  <div><%= f.label :zip %><br />
  <%= f.text_field :zip %></div>

  <div><%= f.submit "Update" %></div>
<% end %>

<%= link_to "Back", :back %>